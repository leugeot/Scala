<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Scala" parent="Theme.AppCompat">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScalaProgressDialog" parent="Base.Theme.AppCompat.DialogWhenLarge">
        <item name="android:alertDialogStyle">@style/ScalaAlertDialog</item>
        <item name="android:windowBackground">@color/dialog_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ScalaAlertDialog">
        <item name="android:bottomBright">@color/dialog_color</item>
        <item name="android:bottomDark">@color/dialog_color</item>
        <item name="android:bottomMedium">@color/dialog_color</item>
        <item name="android:centerBright">@color/dialog_color</item>
        <item name="android:centerDark">@color/dialog_color</item>
        <item name="android:centerMedium">@color/dialog_color</item>
        <item name="android:fullBright">@color/dialog_color</item>
        <item name="android:fullDark">@color/dialog_color</item>
        <item name="android:topBright">@color/dialog_color</item>
        <item name="android:topDark">@color/dialog_color</item>
    </style>

</resources>
