<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <color name="black">#000</color>
    <color name="white">#fff</color>

    <style name="Scala" parent="Theme.AppCompat">
        <item name="android:actionBarStyle">@style/ScalaActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ScalaActionBar</item>

        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="ScalaMenuListView" parent="android:style/Widget.ListView">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:color/holo_red_light</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="ScalaActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:actionBarItemBackground">@android:color/holo_green_dark</item>
        <item name="android:selectableItemBackground">@android:color/holo_red_dark</item>

        <!-- Support library compatibility -->
        <item name="selectableItemBackground">@android:color/holo_red_dark</item>
        <item name="actionBarItemBackground">@android:color/holo_green_dark</item>


    </style>

</resources>
